<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
         <record id="reason_wizard_action" model="ir.actions.act_window">
            <field name="name">Reason Wizard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">reason.wizard</field>
            <field name="view_mode">form</field>
             <field name="target">new</field>
        </record>
        <record id="wizard_reason" model="ir.ui.view">
            <field name="name">Leave Reason Form View</field>
            <field name="model">reason.wizard</field>
            <field name="arch" type="xml">
                <form string="Switch to language">
                    <div>
                        <strong>
                            <field name="reason" string="Reason" placeholder="Enter Reason" required="True"/>
                        </strong>

                    </div>
                    <footer>
                        <button name="action_confirm" string="Confirm" type="object" class="btn-primary"/>
                        <button string="Discard" type="object" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
           </field>
        </record>
    </data>
</odoo>