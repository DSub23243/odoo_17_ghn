<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="custom_address_inheritance" inherit_id="website_sale.address" active="True" customize_show="True"
              name="Custom Address Fields">
        <!-- Locate the specific position before which to insert your content -->
        <xpath expr="//div[@t-att-style[contains(., &quot;(not country or not country.state_ids) and 'display: none'&quot;)]]"
               position="after">
            <!-- Add your custom content here -->
            <div t-attf-class="#{error.get('city') and 'o_has_error' or ''} div_city col-lg-6 mb-2">
                <label class="col-form-label" for="ward_id">Wards</label>
                <select id="ward_id" name="ward_id"
                        t-attf-class="form-select #{error.get('ward') and 'o_has_error' or ''}">
                    <option value="">Please select a Ward...</option>
                    <t t-foreach="wards" t-as="ward">
                        <option t-att-value="ward['id']" t-if="ward['id'] == selected_ward_id" selected="selected">
                            <t t-esc="ward['name']"/>
                        </option>
                        <option t-att-value="ward['id']" t-else="">
                            <t t-esc="ward['name']"/>
                        </option>
                        <option t-att-value="">

                        </option>
                    </t>
                </select>
            </div>


            <div t-attf-class="#{error.get('city') and 'o_has_error' or ''} div_city col-lg-6 mb-2">
                <label class="col-form-label" for="district_id">District</label>
                <select id="district_id" name="district_id"
                        t-attf-class="form-select #{error.get('district') and 'o_has_error' or ''}">
                    <option value="">Please select a District...</option>
                    <t t-foreach="districts" t-as="district">
                        <option t-att-value="district['id']" t-if="district['id'] == selected_district_id"
                                selected="selected">
                            <t t-esc="district['name']"/>
                        </option>
                        <option t-att-value="district['id']" t-else="">
                            <t t-esc="district['name']"/>
                        </option>
                    </t>
                </select>
            </div>
        </xpath>
    </template>
</odoo>
