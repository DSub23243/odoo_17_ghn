<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Kế thừa view để chỉnh sửa hoặc thêm vào nhóm 'group_standard_price' -->
        <record id="product_template_form_view_inherit" model="ir.ui.view">
            <field name="name">product.template.form.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/notebook/page[@name='general_information']/group/group[@name='group_standard_price']/field[@name='categ_id']" position="before">
                    <field name="length" />
                    <field name="width" />
                    <field name="height" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>

